right/left -> last/first node of every level needs to be printed

// Approach 1 -> for right view

class Solution {
public:
    void f(TreeNode* root, int level, vector<int>& ans)
    {
        if(root==NULL)
        {
            return;
        }
        if(level==ans.size())
        {
            ans.push_back(root->val);
        }

        f(root->right, level+1, ans);
        f(root->left, level+1, ans);
    }

    vector<int> rightSideView(TreeNode* root) {
        vector<int> ans;
        f(root, 0, ans);
        return ans;
    }
};
